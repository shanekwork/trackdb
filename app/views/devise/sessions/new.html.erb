<div class="deviseSignIn">

<h2 style="text-align:center;color:#313131;font-weight:bolder;">Sign in</h2>

<hr class="style"><br />

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div style="margin-bottom:20px;"><%= f.label :email, :class => 'deviseLabel' %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div style="margin-bottom:10px;"><%= f.label :password, :class => 'deviseLabel' %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div style="margin-bottom:10px;"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>

  <% end -%>

  <div style="margin-bottom:5px;"><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>